<div class="pagination-controls" data-test-pagination-control-container>
  <button
    class="pagination-btn"
    data-test-pagination-control-last-page-btn
    type="button"

    {{on "click" (fn @goToLastPage @lastPage)}}
  >
      &lt;
    </button>
  <button
    class="pagination-btn"
    data-test-pagination-control-first-page-btn
    type="button"

    {{on "click" (fn @goToFirstPage 1)}}
  >
    &lt;&lt;
  </button>
  <div class="pagination-readout" data-test-pagination-control-readout>
    <span class="page-indicator" data-test-pagination-control-readout-current-page>
      Page&nbsp;{{@page}}&nbsp;of&nbsp;{{@totalPages}}
    </span>
    <Ui::MaterialInput
      @input-id="page-limit"
      @label="Per Page"
      @required={{false}}
      @value={{@limit}}

      @update={{@updateLimit}}
    />
  </div>
  <button
    class="pagination-btn"
    data-test-pagination-control-final-page-btn
    type="button"

    {{on "click" (fn @goToFinalPage @totalPages)}}
  >
    &gt;&gt;
  </button>
  <button
    class="pagination-btn"
    data-test-pagination-control-next-page-btn
    type="button"

    {{on "click" (fn @goToNextPage @nextPage)}}
  >
    &gt;
  </button>
</div>